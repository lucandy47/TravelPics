{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageVersion": {
        "type": "string"
      },
      "environmentShortcut": {
        "defaultValue": "dev",
        "type": "string"
      },
      "containerappName": {
        "defaultValue": "travelpics-notifications",
        "type": "string"
      },
      "location": {
        "defaultValue": "eastus",
        "type": "string"
      },
      "environment_name": {
        "defaultValue": "TRAVELPICS-CNTENV",
        "type": "string"
      },
      "registryPassword": {
        "defaultValue": "hcKsfCPLqx/kjAZrnEEzqaHpuUAkH3oeEMwJAEHx3T+ACRDMHaIU",
        "type": "string"
      },
      "revisionNumber":{
        "type": "string"
      },
      "eventHubNamespaceConnectionString": {
        "type": "string"
      },
      "storageConnectionString": {
        "type": "string"
      }
    },
    "variables": {},
    "resources": [
      {
        "apiVersion": "2022-11-01-preview",
        "type": "Microsoft.App/containerApps",
        "name": "[concat(parameters('containerappName'),'-',parameters('environmentShortcut'))]",
        "location": "[parameters('location')]",
        "properties": {
          "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environment_name'))]",
          "configuration": {
            "activeRevisionsMode": "Single",
            "secrets": [
              {
                "name": "event-hub-namespace",
                "value": "[concat(parameters('eventHubNamespaceConnectionString'),';EntityPath=notification-v221201')]"
              },
              {
                "name": "storage",
                "value": "[parameters('storageConnectionString')]"
              }
            ],
            "registries": [
              {
                "server": "travelpicscntapps.azurecr.io",
                "username": "MainToken",
                "registryPassword":"[parameters('registryPassword')]"
              }
            ]
          },
          "template": {
            "revisionSuffix": "[parameters('revisionNumber')]",
            "containers": [
              {
                "image": "[concat('travelpicscntapps.azurecr.io/',parameters('containerappName'),'-', parameters('environmentShortcut'),':',parameters('imageVersion'))]",
                "name": "[concat(parameters('containerappName'),'-', parameters('environmentShortcut'))]",
                "env": [
                  {
                    "name": "HTTP_PORT",
                    "value": "80"
                  }
                ],
                "resources": {
                  "cpu": 0.5,
                  "memory": "1Gi"
                }
              }
            ],
            "scale": {
              "minReplicas": 1,
              "maxReplicas": 1,
              "pollingInterval": 30,
              "cooldownPeriod": 300,
              "rules": [
                {
                  "name": "event-hub-scale",
                  "custom": {
                    "type": "azure-eventhub",
                    "metadata": {
                      "blobContainer": "notification-checkpoint",
                      "consumerGroup": "$Default",
                      "unprocessedEventThreshold": "10",
                      "activationUnprocessedEventThreshold": "1"
                    },
                    "auth": [
                      {
                        "secretRef": "event-hub-namespace",
                        "triggerParameter": "connection"
                      },
                      {
                        "secretRef": "storage",
                        "triggerParameter": "storageConnection"
                      }
                    ]
                  }
                }
            ]
            }
          }
        }
      }
    ]
  }
  